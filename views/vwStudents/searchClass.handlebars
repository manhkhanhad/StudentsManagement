<div class="card">
  <div class="card-body">
    <form action="" method="POST">
      <select class="custom-select" id="txtLop" name="txtLop">
        <option selected>Choose...</option>
        <option value="10A1">10A1</option>
        <option value="10A2">10A2</option>
        <option value="10A3">10A3</option>
        <option value="10A1">11A1</option>
        <option value="10A2">11A2</option>
        <option value="10A3">11A3</option>
        <option value="10A1">12A1</option>
        <option value="10A2">12A2</option>
        <option value="10A3">12A3</option>
      </select>
      <div class="input-group-append">
        <button class="btn btn-outline-secondary" type="submit">Search</button>
      </div>
    </form>
    {{#if this.empty}}
      <div class="card-body">
        <h4 class="card-text">Khong co du lieu</h4>
      </div>
    {{else}}
    <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">Ma hoc sinh</th>
        <th scope="col">Ho va ten</th>
        <th scope="col">Lop</th>
        <th scope="col">Gioi tinh</th>
        <th scope="col">Ngay sinh</th>
        <th scope="col">Dia chi</th>
        <th scope="col">Email</th>
        <th scope="col">Ma tai khoan</th>
        <th scope="col">&NonBreakingSpace;</th>
      </tr>
    </thead>
    <tbody>
      {{#each this.students}}
      <tr>
        <th scope="row">{{MaHS}}</th>
        <td>{{HoTen}}</td>
        <td>{{Lop}}</td>
        <td>{{GioiTinh}}</td>
        <td>{{NgaySinh}}</td>
        <td>{{DiaChi}}</td>
        <td>{{Email}}</td>
        <td>{{MaTK}}</td>
      </tr>

      {{/each}}
    </tbody>
    </table>
    {{/if}}
    <div class="card-footer text-muted">
        Footer
    </div>
  </div>
</div>
{{#section 'title'}}
- Search Class
{{/section}}
