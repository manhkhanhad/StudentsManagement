<div class="card">
    <div class="card-header">
        <h4>Register</h4>
    </div>
        <div class="card-body">
            <form method="POST" action="" id="frmRegister">
                <div class="form-group">
                    <label for="txtUsername">Ten dang nhap</label>
                    <input type="text" class="form-control" id="txtUsername" name="TenDN" autofocus>
                    <label for="txtPassword">Mat khau</label>
                    <input type="text" class="form-control" id="txtPassword" name="MatKhau">
                    <label for="txtConfirm">Nhap lai mat khau</label>
                    <input type="text" class="form-control" id="txtConfirm" name="Confirm">
                    <label for="txtAccountType">Chuc vu</label>
                    <input type="text" class="form-control" id="txtAccountType" name="ChucVu">
                </div>
                
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-check" aria-hidden="true"></i>
                    Register
                    </button>
                </form>
        </div>
    <div class="card-footer text-muted">
        Footer
    </div>
</div>

{{#section 'title'}}
- Register
{{/section}}

{{#section 'js'}}
<script>
    $('#frmRegister').on('submit', function(e){
        e.preventDefault();
        if (validate())
            $('#frmRegister').off('submit').submit();
    })

    function validate(){
        return true;
    }
</script>
{{/section}}